@model int

<div class="container text-center mt-5">
    <!-- Header Section -->
    <div class="p-4 rounded shadow-sm bg-light">
        <h1 class="text-primary display-4 mb-4">
            <i class="bi bi-check-circle-fill"></i> Order Confirmation
        </h1>
        <h2 class="text-dark">Thank you for your order!</h2>
        <p class="text-muted">
            We have successfully received your order. Please note that it will be prepared and ready for pickup within
            <strong>30 minutes</strong> during regular business hours.
        </p>
    </div>

    <!-- Order Details Section -->
    <div class="mt-4 p-3 rounded shadow-sm bg-light">
        <h4 class="mb-3">Order Information</h4>
        <p class="mb-0">Your Order ID is:</p>
        <h3 class="fw-bold">#@Model</h3>
    </div>

    <!-- Thank You Section -->
    <div class="mt-4 p-4 rounded bg-light shadow-sm">
        <h5 class="text-dark">We appreciate your business.</h5>
        <p class="text-muted">
            Our team is dedicated to ensuring your satisfaction. If you have any questions or special requests, please do not hesitate to contact us.
        </p>
    </div>

    <!-- Back to Menu Button -->
    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle"></i> Return to Menu
        </a>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
