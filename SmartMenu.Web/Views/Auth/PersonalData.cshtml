@model EditAccountDto

<div class="container mt-5">
    <h2>Personal Data</h2>
    <p>Manage your personal data, including account details, password, and account deletion.</p>

    <hr />

    <div class="card">
        <div class="card-header bg-primary text-white">
            Your Information
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.NewName</p>
            <p><strong>Email:</strong> @Model.NewEmail</p>
            <p><strong>Phone Number:</strong> @Model.NewPhoneNumber</p>
        </div>
    </div>

    <hr />

    <div class="mt-4">
        <a asp-action="EditAccount" class="btn btn-outline-primary">Edit Personal Information</a>
        <a asp-action="ChangePassword" class="btn btn-outline-warning">Change Password</a>
        <form asp-action="DeleteAccount" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">Delete Account</button>
        </form>
    </div>
</div>
