@model EditAccountDto

@{
    ViewData["Title"] = "Confirm Account Deletion";
}

<div class="container mt-5">
    <h2>Are you sure you want to delete your account?</h2>
    <p class="text-danger">This action cannot be undone.</p>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Your Personal Data</h4>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.NewName</p>
            <p><strong>Email:</strong> @Model.NewEmail</p>
            <p><strong>Phone Number:</strong> @Model.NewPhoneNumber</p>
        </div>
    </div>

    <form asp-action="DeleteAccount" method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete My Account</button>
        <a asp-action="PersonalData" class="btn btn-outline-primary ms-2">Cancel</a>
    </form>
</div>
