@model EditAccountDto

<div class="container mt-5">
    <h2>Edit Account</h2>
    <form asp-action="EditAccount" method="post">
        <input asp-for="UserId" type="hidden" />

        <div class="form-group">
            <label asp-for="NewName">Name</label>
            <input asp-for="NewName" class="form-control" />
            <span asp-validation-for="NewName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewEmail">Email</label>
            <input asp-for="NewEmail" class="form-control" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPhoneNumber">Phone Number</label>
            <input asp-for="NewPhoneNumber" class="form-control" />
            <span asp-validation-for="NewPhoneNumber" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="PersonalData" class="btn btn-outline-primary ms-2">Back to Personal Data</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}