@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border shadow-sm p-4 bg-light rounded">
        <h1 class="text-danger text-center">Delete Coupon</h1>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" disabled class="form-control bg-light text-muted" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" disabled class="form-control bg-light text-muted" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" disabled class="form-control bg-light text-muted" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn btn-outline-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
