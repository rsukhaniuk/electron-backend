@model CouponDto

<form asp-action="CouponCreate">
    <br />
    <div class="container border shadow-sm p-4 bg-light rounded">
        <h1 class="text-primary text-center">Create Coupon</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" placeholder="Enter coupon code" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" placeholder="Enter discount amount" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" placeholder="Enter minimum amount" />
                <span asp-validation-for="MinAmount" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn btn-outline-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
