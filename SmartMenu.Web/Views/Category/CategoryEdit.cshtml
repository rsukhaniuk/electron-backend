@model CategoryDto

<form asp-action="CategoryEdit">
    <br />
    <div class="container border shadow-sm p-4 bg-light rounded">
        <h1 class="text-primary text-center">Edit Category</h1>
        <input hidden asp-for="CategoryId" />
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2 fw-bold" style="font-size:18px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-5 offset-2">
                        <a asp-action="CategoryIndex" class="btn btn-outline-primary form-control">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
