@model CategoryDto

<form asp-action="CategoryCreate">
    <br />
    <div class="container border shadow-sm p-4 bg-light rounded">
        <h1 class="text-primary text-center">Create Category</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2 fw-bold" style="font-size:18px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CategoryIndex" class="btn btn-outline-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
